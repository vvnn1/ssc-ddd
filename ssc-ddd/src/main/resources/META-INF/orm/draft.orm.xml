<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">
    <entity class="indi.melon.ssc.draft.domain.draft.Draft" access="FIELD">
        <attributes>
            <embedded-id name="id">
                <attribute-override name="value">
                    <column name="id"/>
                </attribute-override>
            </embedded-id>
            <basic name="name"/>
            <basic name="content"/>
            <basic name="type">
                <enumerated>ORDINAL</enumerated>
            </basic>
            <basic name="creator"/>
            <basic name="modifier"/>
            <basic name="createTime"/>
            <basic name="updateTime"/>
<!--            <basic name="version"/>-->
            <embedded name="configuration" access="FIELD">
                <attribute-override name="engineId">
                    <column name="engineId"/>
                </attribute-override>
                <attribute-override name="attachmentIdSet">
                    <column name="attachmentIdSet"/>
                </attribute-override>
                <convert attribute-name="attachmentIdSet" converter="indi.melon.ssc.draft.domain.draft.AttachmentIDSetConverter">
                </convert>
            </embedded>
        </attributes>
    </entity>

    <entity class="indi.melon.ssc.draft.domain.template.Template" access="FIELD">
        <attributes>
            <embedded-id name="id">
                <attribute-override name="value">
                    <column name="id"/>
                </attribute-override>
            </embedded-id>

            <basic name="name"/>
            <basic name="desc"/>
            <basic name="content"/>
            <basic name="catalog">
                <enumerated>ORDINAL</enumerated>
            </basic>
            <basic name="type">
                <enumerated>ORDINAL</enumerated>
            </basic>
            <basic name="tag">
                <enumerated>ORDINAL</enumerated>
            </basic>
        </attributes>
    </entity>

    <entity class="indi.melon.ssc.draft.domain.version.Version" access="FIELD">
        <attributes>
            <embedded-id name="id">
                <attribute-override name="value">
                    <column name="id"/>
                </attribute-override>
            </embedded-id>

            <basic name="content"/>
            <basic name="createTime"/>
            <basic name="creator"/>
            <basic name="remark"/>
            <basic name="locked"/>
            <embedded name="draftID">
                <attribute-override name="value">
                    <column name="draftID"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>
</entity-mappings>