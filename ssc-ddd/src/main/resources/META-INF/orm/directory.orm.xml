<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">
    <entity class="indi.melon.ssc.directory.domain.tree.TreeNode" access="FIELD">
        <attributes>
            <embedded-id name="id">
                <attribute-override name="value">
                    <column name="id"/>
                </attribute-override>
            </embedded-id>
            <basic name="name"/>
            <basic name="type"/>
            <basic name="createTime"/>
            <basic name="updateTime"/>
            <basic name="expandable"/>
            <basic name="locked"/>
            <basic name="sort">
                <convert converter="indi.melon.ssc.directory.domain.tree.SortConverter"/>
            </basic>
            <many-to-one name="parentNode" target-entity="indi.melon.ssc.directory.domain.tree.TreeNode" fetch="EAGER">
                <join-column name="parentId"/>
            </many-to-one>

            <one-to-many name="childNodeList" target-entity="indi.melon.ssc.directory.domain.tree.TreeNode" orphan-removal="true" fetch="EAGER" mapped-by="parentNode">
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>

</entity-mappings>