<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">
   <entity class="indi.melon.ssc.ticket.domain.ticket.TicketSegment" access="FIELD">
      <inheritance strategy="SINGLE_TABLE"/>
      <discriminator-column name="type" discriminator-type="STRING"/>
      <attributes>
         <embedded-id name="id"/>
         <basic name="ticketNum"/>
         <basic name="desc"/>
         <basic name="updateTime"/>
         <basic name="type">
            <column updatable="false" insertable="false"/>
            <enumerated>STRING</enumerated>
         </basic>
         <version name="version"/>
      </attributes>
   </entity>

   <entity class="indi.melon.ssc.ticket.domain.ticket.AutoIncrTicketSegment" access="FIELD">
      <discriminator-value>AUTO_INCREMENT</discriminator-value>
      <attributes>
         <basic name="currentMaxTicket">
            <convert converter="indi.melon.ssc.ticket.domain.ticket.Str2IntegerConverter"/>
         </basic>
      </attributes>
   </entity>

   <entity class="indi.melon.ssc.ticket.domain.ticket.UuidTicketSegment" access="FIELD">
      <discriminator-value>UUID</discriminator-value>
   </entity>
</entity-mappings>